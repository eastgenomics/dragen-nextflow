{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/eastgenomics/dragen-nextflow/refs/heads/add_schema/nextflow_schema.json",
    "title": "Nextflow Configuration Schema",
    "description": "Schema for validating Nextflow configuration",
    "type": "object",
    "$defs":{
        "input_output_options": {
            "title": "Input/Output Options",
            "type": "object",
            "required": ["fasta1", "fasta2", "lic"],
            "properties": {
                "fasta1": {
                    "type": "string",
                    "description": "S3 Path to the first FASTA file",
                    "format": "file-path"
                },
                "fasta2": {
                    "type": "string",
                    "description": "S3 Path to the second FASTA file",
                    "format": "file-path"
                },
                "lic": {
                    "type": "string",
                    "description": "license key"
                }
            }
        }
    },
    "allOf": [
        { "$ref": "#/$defs/input_output_options" }
    ]
    
}