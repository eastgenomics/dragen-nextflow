{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Nextflow Configuration Schema",
    "description": "Schema for validating Nextflow configuration",
    "type": "object",
    "$defs":{
        "input_output_options": {
            "title": "Input/Output Options",
            "type": "object",
            "required": ["fasta_1", "fasta_2", "lic"],
            "properties": {
                "fasta_1": {
                    "type": "string",
                    "description": "S3 Path to the first FASTA file"
                },
                "fasta_2": {
                    "type": "string",
                    "description": "S3 Path to the second FASTA file"
                },
                "lic": {
                    "type": "string",
                    "description": "license key"
                }
            }
        }
    }
}